<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity="center"
    tools:context=".InscriptionActivity">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/wallet"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/txthome_register"
        android:text="S'inscrire"
        android:textSize="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorAccent"
        android:hint="Nom"
        android:id="@+id/edtnom"
        android:textColorHint="#F5669C"
        android:textColor="#000"
        android:drawableTint="#F5669C"
        android:drawableRight="@drawable/ic_account_box_black_24dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorAccent"
        android:hint="E-mail"
        android:id="@+id/edtemail"
        android:textColorHint="#F5669C"
        android:textColor="#000"
        android:inputType="textEmailAddress"
        android:drawableTint="#F5669C"
        android:drawableRight="@drawable/ic_email_black_24dp"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorAccent"
        android:hint="Mot de passe"
        android:textColor="#000"
        android:inputType="textPassword"
        android:id="@+id/edtpassword"
        android:textColorHint="#F5669C"
        android:drawableTint="#F5669C"
        android:drawableRight="@drawable/ic_lock_black_24dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="S'inscrire"
        android:background="@drawable/shape"
        android:textColor="@color/colorAccent"
        android:id="@+id/btn_register"
        android:paddingRight="10dp"
        android:layout_gravity="right"
        android:layout_margin="8dp"
        android:layout_marginBottom="5dp"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
</LinearLayout>